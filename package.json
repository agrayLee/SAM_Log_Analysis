{
  "name": "sam-log-system",
  "version": "1.3.0",
  "description": "山姆日志查询系统 - 基于验证项目的完整Web应用",
  "main": "backend/app.js",
  "scripts": {
    "start": "node backend/app.js",
    "dev": "nodemon backend/app.js",


    "test": "node tests/run-tests.js",
    "health-check": "node tools/health-check.js",
    "validate-data": "node tools/data-validator.js",
    "analyze-logs": "node tools/log-analyzer.js",
    "init-db": "node backend/database/init.js",
    "migrate-timezone": "node backend/database/migrate-timezone.js",
    "migrate-user-management": "node backend/database/migrate-user-management.js",
    "fix-database": "node fix-database.js",
    "build-frontend": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop sam-log-system",
    "pm2:restart": "pm2 restart sam-log-system",
    "pm2:delete": "pm2 delete sam-log-system",
    "pm2:logs": "pm2 logs sam-log-system",
    "pm2:status": "pm2 list",
    "pm2:save": "pm2 save",
    "pm2:setup": "pm2 start ecosystem.config.js --env production && pm2 save && pm2 startup",
    "service:install": "install-windows-service.bat",
    "service:task": "install-task-scheduler.bat",
    "service:manager": "service-manager.bat",
    "migrate:backup": "migration-backup-en.bat",
    "migrate:backup-cn": "migration-backup.bat",
    "migrate:deploy": "migration-deploy-simple.bat",
    "migrate:verify": "migration-verify.bat",
    "migrate:one-click": "one-click-deploy.bat",

    "install:nodejs": "install-nodejs.bat"
  },
  "keywords": ["山姆日志", "Web查询系统", "Express", "Vue3", "SQLite"],
  "author": "产品经理项目",
  "license": "MIT",
  "dependencies": {
    "iconv-lite": "^0.6.3",
    "express": "^4.18.0",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.0.1",
    "express-session": "^1.17.3",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "node-cron": "^3.0.2",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
